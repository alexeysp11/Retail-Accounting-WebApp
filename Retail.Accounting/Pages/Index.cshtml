@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="info-wrapper">
    <div style="grid-column: 1; grid-row: 1;">
        <b>Company name:</b>
    </div>
    <div style="grid-column: 2; grid-row: 1;">Company1</div>

    <div style="grid-column: 1; grid-row: 2;">
        <b>Owner:</b>
    </div>
    <div style="grid-column: 2; grid-row: 2;">Owner1</div>

    <div style="grid-column: 1; grid-row: 3;">
        <b>Country:</b>
    </div>
    <div style="grid-column: 2; grid-row: 3;">Country1</div>

    <div style="grid-column: 1; grid-row: 4;">
        <b>City:</b>
    </div>
    <div style="grid-column: 2; grid-row: 4;">City1</div>
</div>

<br>

<form method="post">
    <div class="text-center">
        <div class="table-wrapper">
        
            <div style="grid-column: 1; grid-row: 2;">
                <input type="submit" value="Import" class="home-btn" asp-area="" 
                    asp-page="/InputData/Import">
            </div>
            <div style="grid-column: 1; grid-row: 3;">
                <input type="submit" value="Export" class="home-btn" asp-area="" 
                    asp-page="/InputData/Export">
            </div>
            <div style="grid-column: 1; grid-row: 4;">
                <input type="submit" value="Inventary" class="home-btn" asp-area="" 
                    asp-page="/InputData/Inventary">
            </div>

            <div style="grid-column: 2; grid-row: 2;">
                <input type="submit" value="Revenue" class="home-btn" asp-area="" 
                    asp-page="/Reports/Revenue">
            </div>
            <div style="grid-column: 2; grid-row: 3;">
                <input type="submit" value="Performance" class="home-btn" asp-area="" 
                    asp-page="/Reports/Performance">
            </div>
            <div style="grid-column: 2; grid-row: 4;">
                <input type="submit" value="Products" class="home-btn" asp-area="" 
                    asp-page="/Reports/Products">
            </div>
            
            <div style="grid-column: 3; grid-row: 2;">
                <input type="submit" value="Employees" class="home-btn" asp-area="" 
                    asp-page="/Management/Employees">
            </div>
            <div style="grid-column: 3; grid-row: 3;">
                <input type="submit" value="Clients" class="home-btn" asp-area="" 
                    asp-page="/Management/Clients">
            </div>
            <div style="grid-column: 3; grid-row: 4;">
                <input type="submit" value="Events" class="home-btn" asp-area="" 
                    asp-page="/Management/Events">
            </div>
        </div>
    </div>
</form>
